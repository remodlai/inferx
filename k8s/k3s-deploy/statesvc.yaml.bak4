apiVersion: apps/v1
kind: Deployment
metadata:
  name: statesvc
  labels:
    app: statesvc
spec:
  replicas: 2
  selector:
    matchLabels:
      app: statesvc
  template:
    metadata:
      labels:
        app: statesvc
    spec:
      hostPID: true
      containers:
        - name: statesvc
          image: inferx/inferx_platform:v0.1.4
          imagePullPolicy: IfNotPresent
          env:
          - name: POD_IP
            valueFrom:
              fieldRef:
                fieldPath: status.podIP          
          - name: RUN_SERVICE
            value: "StateSvc"
          - name: STATESVC_PORT
            value: "1237"
          - name: ETCD_ADDRS
            value: "http://etcd:2379"
          volumeMounts:
            - mountPath: /opt/inferx/log
              name: opt-inferx-log
      volumes:
        - name: opt-inferx-log
          hostPath:
            path: /opt/inferx/log      
---
apiVersion: v1
kind: Service
metadata:
  name: statesvc
spec:
  type: NodePort
  selector:
    app: statesvc
  ports:
    - name: http
      port: 1237
      targetPort: 1237
